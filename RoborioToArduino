#include <Wire.h>#include <Adafruit_NeoPixel.h>
//create Neopixel stripAdafruit_NeoPixel strip = Adafruit_NeoPixel(75, 7);
//Green from low to switch//Blue from switch to scale//Red for scale to high
boolean lowToSwitch = true;boolean switchToScale = false;boolean scaleToHigh = false; boolean cubeAcquired = true;
void setup() {  //initialize Serial Monitor  Serial.begin(9600);    //for receiving commands   Wire.begin(84);  Wire.onReceive(receiveEvent); 
  //strip starts out as green  strip.begin();  for(int i = 0; i < 75; i++){    strip.setPixelColor(i, 0, 255, 255); //teal  }  strip.show();}
void loop() {  //Serial.println(Wire.available());}
void receiveEvent(int num){  //pixie cam started  while(Wire.available()){    char c = Wire.read();    //robot has aquired a cube, button pressed    if(c == 5){      cubeAcquired = true;      lowToSwitch = true;      switchToScale = false;      scaleToHigh = false;            for(int i = 0; i < 75; i++){        strip.setPixelColor(i, 255, 0, 0); // red      }      strip.show();        }  }
    //pixie cam ended  while(Wire.available()){    char c = Wire.read();    //robot has aquired a cube, button pressed    if(c == 6){      cubeAcquired = true;      lowToSwitch = true;      switchToScale = false;      scaleToHigh = false;            for(int i = 0; i < 75; i++){        strip.setPixelColor(i, 255, 255, 255); // red      }      strip.show();        }  }
    while(Wire.available()){    char c = Wire.read();    //robot has aquired a cube, button pressed    if(c == 3){      cubeAcquired = true;      lowToSwitch = true;      switchToScale = false;      scaleToHigh = false;            for(int i = 0; i < 75; i++){        strip.setPixelColor(i, 255, 0, 0); // red      }      strip.show();        }        //robot has relased a cube, button released    else if(c == 4){      cubeAcquired = false;      //normal mode runs until cube has been acquired      for(int i = 0; i < 75; i++){        strip.setPixelColor(i, 0, 255, 0);      }      strip.show();    }        //won a match, disco mode!    else if(c == 948){      //put funky disco mode here    }        if(cubeAcquired){      //passing switch height      if(c == 1){        //lights change from green to blue         if(lowToSwitch){          lowToSwitch = false;          switchToScale = true;          for(int i = 0; i < 75; i++){            strip.setPixelColor(i, 0, 0, 255); //Blue          }          strip.show();        }        //lights change from blue to green        else if(switchToScale){          switchToScale = false;          lowToSwitch = true;          for(int i = 0; i < 75; i++){            strip.setPixelColor(i, 0, 255, 0); //Green          }          strip.show();        }                }      //passing medium scale height      else if(c == 2){        //lights change from blue to red        if(switchToScale){          switchToScale = false;          scaleToHigh = true;          for(int i = 0; i < 75; i++){           strip.setPixelColor(i, 255, 0, 0); //red          }          strip.show();        }        //lights change from red to blue        else if(scaleToHigh){          scaleToHigh = false;          switchToScale = true;          for(int i = 0; i < 75; i++){           strip.setPixelColor(i, 0, 0, 255); //blue          }          strip.show();        }        }     }   }}
